
@{
    ViewData["Title"] = "HistoricalDataView";
}

<h2>HistoricalDataView</h2>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<div id="chartContainer" style="height: 400px; width: 90%; padding:initial"></div>
<script type="text/javascript">

    window.onload = function () {

        var inputData = @Html.Raw(ViewBag.DataPoints);
        //var subtitleText =  @Html.Raw(ViewBag.DataType);


        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "theme2",
            animationEnabled: true,
            title: {
                text: "Historical Patient Data"
            },
            //subtitles: [
            //    { text: subtitleText }
            //],
            data: [
                {
                    type: "line", //change type to bar, line, area, pie, etc
                    dataPoints: inputData
                    //[
                    //    { x: 10, y: 71 },
                    //    { x: 20, y: 55 },
                    //    { x: 30, y: 50 },
                    //    { x: 40, y: 65 },
                    //    { x: 50, y: 95 },
                    //    { x: 60, y: 68 },
                    //    { x: 70, y: 28 },
                    //    { x: 80, y: 34 },
                    //    { x: 90, y: 14 }
                    //]
                }
            ]
        });
        chart.render();
    };
</script>